<div class="container-fluid product-container">
  <div class="product-img">
    <img src="<%= @product["image"] %>" alt="product-img">
  </div>
  <div class="product-info">
    <div class="product-category text-muted"><%= @product["category"] %></div>
    <div class="product-title fs-2"><%= @product["title"] %></div>
    <div class="product-desc"><%= @product["description"] %></div>
    <div class="product-price fs-3">$<%= @product["price"] %></div>
    <div class="product-add btn btn-dark">Add to Cart</div>
  </div>
</div>